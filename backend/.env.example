# ===================================
# CMS Backend Environment Variables
# ===================================

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# Format: postgresql://USERNAME:PASSWORD@HOST:PORT/DATABASE?schema=public
# For local development with default PostgreSQL:
DATABASE_URL="postgresql://cms_user:cms_password@localhost:5432/cms_database?schema=public"

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# File Upload Configuration
MAX_FILE_SIZE_DOCUMENT=10485760   # 10MB for documents
MAX_FILE_SIZE_AVATAR=2097152      # 2MB for avatars
MAX_FILE_SIZE_TOTAL=52428800      # 50MB total per request
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,rtf,jpg,jpeg,png,gif,webp,zip,rar

# File Processing Configuration
IMAGE_QUALITY_AVATAR=85
IMAGE_QUALITY_THUMBNAIL=80
THUMBNAIL_WIDTH=300
THUMBNAIL_HEIGHT=200
AVATAR_SIZE=150

# File Cleanup Configuration
CLEANUP_INTERVAL_HOURS=24
TEMP_FILE_MAX_AGE_HOURS=24
ORPHAN_FILE_MAX_AGE_HOURS=24

# File Storage Limits
STORAGE_QUOTA_GB=100

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Configuration (for future notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Redis Configuration (for future session management and caching)
REDIS_URL=redis://localhost:6379

# Prisma Configuration
PRISMA_HIDE_UPDATE_MESSAGE=true

# Logging Configuration
LOG_LEVEL=info

# System Configuration
REFERENCE_NUMBER_PREFIX=HIAST
REFERENCE_NUMBER_YEAR=2024