{
  "name": "cms-backend",
  "version": "1.0.0",
  "description": "Backend API for Correspondence Management System (CMS)",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "build:prod": "npm run clean && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:migrate": "prisma migrate dev",
    "db:migrate:create": "prisma migrate dev --create-only",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "postinstall": "prisma generate",
    "deploy:db": "node scripts/deploy-db.js",
    "vercel-build": "echo 'Building backend...' && prisma generate && tsc"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [
    "cms",
    "correspondence",
    "management",
    "api",
    "backend"
  ],
  "author": "CMS Development Team",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "@types/mime-types": "^3.0.1",
    "@types/uuid": "^8.3.4",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^3.0.1",
    "multer": "^2.0.2",
    "sharp": "^0.34.5",
    "socket.io": "^4.8.1",
    "uuid": "^8.3.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@vercel/node": "^3.0.0",
    "nodemon": "^3.1.11",
    "prisma": "^6.19.0",
    "rimraf": "^6.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
